<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_demo_list" model="ir.ui.view">
        <field name="name">demo.model.list</field>
        <field name="model">demo.model</field>
        <field name="arch" type="xml">
            <list string="Demo Records">
                <field name="name"/>
                <field name="description"/>
            </list>
        </field>
    </record>


    <record id="view_demo_form" model="ir.ui.view">
        <field name="name">demo.model.form</field>
        <field name="model">demo.model</field>
        <field name="arch" type="xml">
            <form string="Demo Record">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_demo_model" model="ir.actions.act_window">
        <field name="name">Demo Records</field>
        <field name="res_model">demo.model</field>
        <field name="view_mode">list,form</field>
    </record>


    <menuitem id="menu_demo_root" name="Demo" sequence="10"/>


    <menuitem id="menu_demo_model"
              name="Demo Records"
              parent="menu_demo_root"
              action="action_demo_model"
              sequence="20"/>
</odoo>
