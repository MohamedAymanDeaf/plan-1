<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="view_job_list" model="ir.ui.view">
        <field name="name">job.list</field>
        <field name="model">job</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="company_id"/>
                <field name="part_count"/>
            </list>
        </field>
    </record>

    <record id="view_job_form" model="ir.ui.view">
        <field name="name">job.form</field>
        <field name="model">job</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="company_id"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="order_line_ids">
                                <list>
                                    <field name="part_id"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_part_list" model="ir.ui.view">
        <field name="name">part.list</field>
        <field name="model">part</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
                <field name="job_id"/>
                <field name="company_id"/>
                <field name="active"/>
                <field name="price"/>
            </list>
        </field>
    </record>

    <record id="view_part_form" model="ir.ui.view">
        <field name="name">part.form</field>
        <field name="model">part</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="job_id"/>
                        <field name="company_id"/>
                        <field name="active"/>
                        <field name="price"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_order_line_list" model="ir.ui.view">
        <field name="name">order_line.list</field>
        <field name="model">order_line</field>
        <field name="arch" type="xml">
            <list>
                <field name="order_id"/>
                <field name="company_id"/>
                <field name="job_id"/>
                <field name="part_id"/>
                <field name="quantity"/>
                <field name="price_unit"/>
                <field name="subtotal"/>
            </list>
        </field>
    </record>

    <record id="view_order_line_form" model="ir.ui.view">
        <field name="name">order_line.form</field>
        <field name="model">order_line</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="order_id"/>
                        <field name="company_id"/>
                        <field name="job_id"/>
                        <field name="part_id"
                               domain="[('active','=',True), ('company_id','=', company_id), ('job_id','=', job_id)]"/>
                        <field name="quantity"/>
                        <field name="price_unit"/>
                        <field name="subtotal" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="view_order_list" model="ir.ui.view">
        <field name="name">order.list</field>
        <field name="model">order</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="job_id"/>
                <field name="date"/>
                <field name="company_id"/>
                <field name="total_quantity"/>
                <field name="total_amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_order_status_wizard" model="ir.actions.act_window">
        <field name="name">Change Order Status</field>
        <field name="res_model">order.status.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">order.form</field>
        <field name="model">order</field>
        <field name="arch" type="xml">
            <form>
                <header>
                     <button name="%(action_order_status_wizard)d"
                             type="action"
                             string="Change Status"
                             class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="job_id"/>
                        <field name="date"/>
                        <field name="company_id"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="line_ids" context="{'default_job_id': job_id, 'default_company_id': company_id}">
                                <list editable="bottom">
                                    <field name="part_id"
                                           domain="[('active','=',True), ('company_id','=', company_id), ('job_id','=', job_id)]"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                    <field name="subtotal"/>
                                </list>
                            </field>
                        </page>
                        <page string="Totals">
                            <group>
                                <field name="total_quantity" readonly="1"/>
                                <field name="total_amount" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <field name="message_follower_ids" widget="mail_followers"/>
                <field name="activity_ids" widget="mail_activity"/>
                <field name="message_ids" widget="mail_thread"/>
            </form>
        </field>
    </record>


    <record id="view_order_status_wizard_form" model="ir.ui.view">
        <field name="name">order.status.wizard.form</field>
        <field name="model">order.status.wizard</field>
        <field name="arch" type="xml">
            <form string="Change Order Status">
                <group>
                    <field name="status"/>
                </group>
                <footer>
                    <button name="action_apply" type="object" string="Apply" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="server_action_autonumber_orders" model="ir.actions.server">
        <field name="name">Autonumber Old Orders</field>
        <field name="model_id" ref="model_order"/>
        <field name="state">code</field>
        <field name="code">env['order'].action_autonumber_old_orders()</field>
    </record>

    <record id="ir_cron_auto_close_old_orders" model="ir.cron">
        <field name="name">Auto-close Old Orders</field>
        <field name="model_id" ref="model_order"/>
        <field name="state">code</field>
        <field name="code">model.cron_auto_close_old_orders()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="active">True</field>
    </record>


    <record id="action_job" model="ir.actions.act_window">
        <field name="name">Jobs</field>
        <field name="res_model">job</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_part" model="ir.actions.act_window">
        <field name="name">Parts</field>
        <field name="res_model">part</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_order" model="ir.actions.act_window">
        <field name="name">Orders</field>
        <field name="res_model">order</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_wm_root" name="Work Management" sequence="10"/>
    <menuitem id="menu_jobs" name="Jobs" parent="menu_wm_root" action="action_job" sequence="20"/>
    <menuitem id="menu_parts" name="Parts" parent="menu_wm_root" action="action_part" sequence="30"/>
    <menuitem id="menu_orders" name="Orders" parent="menu_wm_root" action="action_order" sequence="40"/>

</odoo>
